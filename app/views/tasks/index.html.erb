<h1>Tasks#index</h1>
<p>Task go here</p>

<ul>
<% @tasks.each do |task| %>
    <li>
    <p><strong><%= link_to task.title, task_path(task) %></strong></p>
    <p><em><%= task.details %></em> <br>
    <%= link_to 'Edit', edit_task_path(task) %> 
    <%= link_to 'Delete', task_path(task), method: :delete %>

    </li>
    <% end %>
    </ul>

<%= link_to 'New Task', new_task_path%>